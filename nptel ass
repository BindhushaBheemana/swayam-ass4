#include <stdio.h>

int main() {
    char name[20];
    int age;
    float height;

    // using printf to display a string
    printf("Enter your name: ");

    // using scanf to read a string
    scanf("%s", name);

    // using printf to display an integer and a float
    printf("Enter your age:\n ");
    scanf("%d", &age);
    printf("Enter your height in meters:\n ");
    scanf("%f", &height);

    // using printf to display the values entered
    printf("Name: %s\n", name);
    printf("Age: %d\n", age);
    printf("Height: %.2f meters\n", height);

    // using putchar to display a single character
    putchar('\n');
    putchar('H');
    putchar('e');
    putchar('l');
    putchar('l');
    putchar('o');
    putchar('\n');

    // using puts to display a string
    puts("Welcome to my program!\n");

    // using fgets to read a line of text
    char message[100];
    printf("Enter a message:\n ");
    gets(message);
    printf("You entered: %s\n", message);

    return 0;
}
